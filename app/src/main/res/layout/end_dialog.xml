<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/end_dialog" />

    <ImageView
        android:id="@+id/victory"
        android:layout_width="316dp"
        android:layout_height="95dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="227dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:srcCompat="@drawable/victory" />

    <ImageView
        android:id="@+id/defeat"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="217dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:srcCompat="@drawable/defeat" />

    <ImageView
        android:id="@+id/complete"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="176dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@drawable/complete" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complete"
        android:orientation="vertical">

        <TextView
            android:id="@+id/end_time_taken"
            android:layout_gravity="center_horizontal"
            android:layout_width="362dp"
            android:layout_height="62dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/timer_background"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingTop="6dp"
            android:text="Time taken: 00:00:00"
            android:textColor="@color/grid_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="-25dp"
            android:layout_marginRight="-25dp"/>


        <TextView
            android:id="@+id/end_play_again"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:layout_marginTop="48dp"
            android:background="@drawable/main_buttons"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Play Again"
            android:textColor="@color/grid_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/end_return_home"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/main_buttons"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Return Home"
            android:textColor="@color/grid_color"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/end_back_btn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/back_button" />

</RelativeLayout>